@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles </h1>
<br />
<br />
<a  asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
<br />



@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d=>d.Id)</td>

                <td>@Html.DisplayNameFor(d=>d.Name)</td>
               
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>


            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>

                    <td>@item.Name</td>
               
                    <partial name="_ButtonsPartialView" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3> There's No Roles!!</h3>
    </div>
}



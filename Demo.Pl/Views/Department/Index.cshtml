@if (TempData["Message"] != null)
{

    <div class="mt-4 alert alert-warning text-center">
        <h3> @TempData["Message"]</h3>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
             
                <td>@Html.DisplayNameFor(d=>d.Code)</td>
                <td>@Html.DisplayNameFor(d=>d.Name)</td>
                <td>@Html.DisplayNameFor(d=>d.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>


            </tr>
            
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCreation</td>
                    <partial name="_ButtonsPartialView" model="@item.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3> there's no department!!</h3>
    </div>
}

 
@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />
<br />
<br />
<a  asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<br />

<nav class="navbar bg-body-tertiary">
    <div class="container ms-5">
        <form class="d-flex" role="search" asp-action="Index" >
            <input class="form-control me-" name="SearchValue" placeholder="Search"  >
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</nav>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
             
                <td>@Html.DisplayNameFor(d=>d.Name)</td>
                <td>@Html.DisplayNameFor(d=>d.Age)</td>
                <td>@Html.DisplayNameFor(d=>d.Image)</td>
                <td>@Html.DisplayNameFor(d=>d.Address)</td>
                <td>@Html.DisplayNameFor(d=>d.Salary)</td>
                <td>@Html.DisplayNameFor(d=>d.IsActive)</td>
                <td>@Html.DisplayNameFor(d=>d.Email)</td>
                <td>@Html.DisplayNameFor(d=>d.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(d=>d.HireDate)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>


            </tr>
            
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>
                        <img src="~/Images/@item.ImageUrl" class="w-100"/>
                    </td>
                    <td>@item.Address</td>
                    <td>@Html.DisplayFor(e=> item.Salary)</td>
                    <td>@Html.DisplayFor(e=> item.IsActive)</td>
                    <td>@Html.DisplayFor(e=> item.Email)</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.HireDate</td>
                    <partial name="_ButtonsPartialView" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3> There's No Employee!!</h3>
    </div>
}

 